<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/crypto_order_book"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/tvTitleMinAmount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTitleMaxAmount"
                tools:text="Item Book" />

            <TextView
                android:id="@+id/tvTitleMaxAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/max_amount"
                app:layout_constraintBottom_toTopOf="@id/tvTitleMinAmount"
                app:layout_constraintStart_toEndOf="@id/crypto_order_book"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Max Amount" />

            <TextView
                android:id="@+id/crypto_order_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/tvTitleMaxAmount"
                app:layout_constraintStart_toEndOf="@id/tvTitleMaxAmount"
                app:layout_constraintTop_toTopOf="@id/tvTitleMaxAmount"
                tools:text="0.02248087" />

            <TextView
                android:id="@+id/tvTitleMinAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/min_amount"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvTitleMaxAmount"
                app:layout_constraintTop_toBottomOf="@id/tvTitleMaxAmount"
                tools:text="Min Amount" />

            <TextView
                android:id="@+id/crypto_order_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@id/tvTitleMinAmount"
                app:layout_constraintStart_toEndOf="@id/tvTitleMinAmount"
                app:layout_constraintTop_toTopOf="@id/tvTitleMinAmount"
                tools:text="378140" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>